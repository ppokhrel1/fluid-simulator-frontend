<?xml version="1.0"?>
<robot name="Mars Exploration Rover" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Default size property -->
  <xacro:property name="default_size" value="0.2"/>

  <!-- Reusable macro for box-shaped components -->
  <xacro:macro name="component" params="name size">
    <link name="${name}">
      <inertial>
        <mass value="1.0"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
      </inertial>
      <visual>
        <geometry>
          <box size="${size} ${size} ${size}"/>
        </geometry>
        <material name="red"/>
      </visual>
      <collision>
        <geometry>
          <box size="${size} ${size} ${size}"/>
        </geometry>
      </collision>
    </link>
  </xacro:macro>

  <!-- Components -->
  <xacro:component name="Robot_Chassis" size="0.6"/>
  <xacro:component name="Wheel_Front_Left" size="0.2"/>
  <xacro:component name="Wheel_Front_Right" size="0.2"/>
  <xacro:component name="Wheel_Rear_Left" size="0.2"/>
  <xacro:component name="Wheel_Rear_Right" size="0.2"/>
  <xacro:component name="Gripper" size="0.1"/>
  <xacro:component name="Manipulator_Arm" size="0.15"/>
  <xacro:component name="LIDAR" size="0.05"/>
  <xacro:component name="Camera" size="0.05"/>
  <xacro:component name="Battery" size="0.1"/>
  <xacro:component name="Servo_Motor" size="0.05"/>
  <xacro:component name="GPS_Module" size="0.05"/>

  <!-- Joints -->
  <joint name="Chassis_FrontLeftWheel" type="revolute">
    <parent link="Robot_Chassis"/>
    <child link="Wheel_Front_Left"/>
    <origin xyz="0.3 0.3 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="Chassis_FrontRightWheel" type="revolute">
    <parent link="Robot_Chassis"/>
    <child link="Wheel_Front_Right"/>
    <origin xyz="0.3 -0.3 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="Chassis_RearLeftWheel" type="revolute">
    <parent link="Robot_Chassis"/>
    <child link="Wheel_Rear_Left"/>
    <origin xyz="-0.3 0.3 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="Chassis_RearRightWheel" type="revolute">
    <parent link="Robot_Chassis"/>
    <child link="Wheel_Rear_Right"/>
    <origin xyz="-0.3 -0.3 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="Chassis_Manipulator" type="revolute">
    <parent link="Robot_Chassis"/>
    <child link="Manipulator_Arm"/>
    <origin xyz="0 0 0.3" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="Manipulator_Gripper" type="revolute">
    <parent link="Manipulator_Arm"/>
    <child link="Gripper"/>
    <origin xyz="0 0 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
