{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "strict": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useUnknownInCatchVariables": true,
    "noEmit": true,
    "noImplicitOverride": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "test/*": ["test/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src", "test"]
}
